@page
@model WebApplication1.Pages.Account.LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Login</h2>
            <form method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>

                <div class="mb-3">
                    <a asp-page="/Account/ForgotPassword" class="btn btn-link">Forgot your password?</a>
                </div>

                @if (!string.IsNullOrEmpty(Model.LockoutMessage))
                {
                    <div class="alert alert-warning">@Model.LockoutMessage</div>
                }

                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>
