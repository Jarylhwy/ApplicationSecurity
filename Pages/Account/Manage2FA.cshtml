@page
@model WebApplication1.Pages.Account.Manage2FAModel
@{
    ViewData["Title"] = "Manage Two-Factor Authentication";
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        @if (!Model.Is2faEnabled)
        {
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Set up Authenticator App</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.QrCodeImage))
                    {
                        <div class="text-center mb-4">
                            <h5>1. Scan this QR code with your authenticator app:</h5>
                            <img src="@Model.QrCodeImage" alt="QR Code for authenticator app"
                                 style="width: 200px; height: 200px; border: 1px solid #ddd; padding: 10px;" />
                        </div>

                        <div class="mb-4">
                            <h5>2. Or manually enter this key:</h5>
                            <div class="alert alert-secondary">
                                <strong>@Model.SharedKey</strong>
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <h5>3. Verify the code from your authenticator app:</h5>
                        <form method="post" asp-page-handler="VerifyAuthenticator">
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label for="Code" class="col-form-label">6-digit code:</label>
                                </div>
                                <div class="col-auto">
                                    <input asp-for="Code" class="form-control" placeholder="123456" autocomplete="off" />
                                </div>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-primary">Verify & Enable</button>
                                </div>
                            </div>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </form>
                    </div>

                    <form method="post" asp-page-handler="ResetAuthenticator" class="mt-3">
                        <button type="submit" class="btn btn-warning">
                            Reset Authenticator Key
                        </button>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Two-Factor Authentication is Enabled</h4>
                </div>
                <div class="card-body">
                    <p class="mb-3">Your account is protected with two-factor authentication using an authenticator app.</p>

                    <div class="mb-3">
                        <form method="post" asp-page-handler="ResetAuthenticator">
                            <button type="submit" class="btn btn-warning">
                                Reset Authenticator Key
                            </button>
                        </form>
                    </div>

                    <hr class="my-4">

                    <div class="alert alert-danger">
                        <h5 class="alert-heading">Disable Two-Factor Authentication</h5>
                        <p>Disabling 2FA reduces the security of your account.</p>
                        <form method="post" asp-page-handler="Disable2fa">
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('ARE YOU ABSOLUTELY SURE? This will completely disable two-factor authentication for your account.');">
                                Disable 2FA
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Auto-dismiss alerts after 5 seconds
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert-info').fadeOut('slow');
            }, 5000);
        });
    </script>
}