@page
@model WebApplication1.Pages.StatusModel
@{
    ViewData["Title"] = "Status";
}

<div class="container mt-5">
    <h1 class="text-primary">Status: @Model.StatusCode</h1>

    @if (Model.StatusCode == 404)
    {
        <p>The page you are looking for could not be found.</p>
    }
    else if (Model.StatusCode == 403)
    {
        <p>You do not have permission to access this resource.</p>
    }
    else
    {
        <p>An unexpected status code was returned: @Model.StatusCode</p>
    }
    @if (Model.StatusCode == 500)
    {
        <p>An internal server error occurred. Please try again later.</p>
    }
    @if (Model.StatusCode == 400)
    {
        <p>Bad request. Please check your input and try again.</p>
    }

    <div class="mt-3">
        <a class="btn btn-secondary" href="/">Return home</a>
    </div>
</div>
